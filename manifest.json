{
  "manifest_version": 3,
  "name": "FPL UX Enhancer",
  "version": "1.0.0",
  "description": "Enhances the UX/UI of Fantasy Premier League website with custom styles and functionality",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://fantasy.premierleague.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://fantasy.premierleague.com/*"],
      "css": ["styles/main.css"],
      "js": ["scripts/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "FPL UX Enhancer"
  }
} 